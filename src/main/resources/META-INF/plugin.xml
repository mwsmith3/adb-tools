<idea-plugin>
    <id>com.github.mwsmith3.adbtools</id>
    <name>ADB Tools</name>
    <vendor>Matthew Smith</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>

    <extensions defaultExtensionNs="com.intellij">
        <projectService serviceImplementation="com.github.mwsmith3.adbtools.services.DeviceProviderService"/>
        <toolWindow
                id="adb"
                icon="AllIcons.Toolwindows.ToolWindowDebugger"
                anchor="left"
                secondary="true"
                factoryClass="com.github.mwsmith3.adbtools.ui.AdbToolWindowFactory"/>
    </extensions>

    <projectListeners>
        <listener class="com.github.mwsmith3.adbtools.listeners.ProjectListener"
                  topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>

    <actions>
        <group id="com.github.mwsmith3.adbtools.ADBActions" text="ADB ToolWindow Actions">
            <action id="com.github.mwsmith3.adbtools.actions.TalkbackAction"
                    class="com.github.mwsmith3.adbtools.actions.TalkbackAction" text="TalkBack Action"
                    description="Toggles TalkBack on a Android device"
                    icon="NetIcons.Common.MessageInfo(Gray)">
            </action>
        </group>

    </actions>
</idea-plugin>
