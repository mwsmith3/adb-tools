<idea-plugin>
    <id>com.github.mwsmith3.adbtools</id>
    <name>ADB Tools</name>
    <vendor>Matthew Smith</vendor>

    <!-- Product and plugin compatibility requirements -->
    <!-- https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.android</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.github.mwsmith3.adbtools.device.DeviceProviderService"/>
        <projectService serviceImplementation="com.github.mwsmith3.adbtools.window.AdbToolWindowManager"/>
        <toolWindow
                id="adb"
                icon="AllIcons.Toolwindows.ToolWindowDebugger"
                anchor="left"
                secondary="true"
                factoryClass="com.github.mwsmith3.adbtools.window.AdbToolWindowFactory"/>
    </extensions>

    <projectListeners>
        <listener class="com.github.mwsmith3.adbtools.window.AdbToolWindowManager"
                  topic="com.github.mwsmith3.adbtools.device.DeviceListener"/>
        <listener class="com.github.mwsmith3.adbtools.adb.AdbExecutorListener"
                  topic="com.github.mwsmith3.adbtools.adb.AdbExecutor"/>
    </projectListeners>

    <actions>
        <group id="com.github.mwsmith3.adbtools.window.actions" text="ADB ToolWindow Actions">
            <action id="com.github.mwsmith3.adbtools.actions.TalkbackAction"
                    class="com.github.mwsmith3.adbtools.actions.TalkbackAction" text="TalkBack Action"
                    description="Toggles TalkBack on a Android device"
                    icon="AdbToolsIcons.AccessibilityIcon">
            </action>
        </group>
    </actions>
</idea-plugin>
